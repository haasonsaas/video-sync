{
  "manifest_version": 3,
  "name": "Video Sync",
  "version": "1.0.0",
  "description": "Sync video playback with friends using P2P connections",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "offscreen",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/peerjs.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
